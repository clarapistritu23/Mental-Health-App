<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCF0"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/container_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exerciții de Respirație"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/exercises_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D7CCC8"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Istoric Stări (Mood Calendar)"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_marginBottom="8dp"/>

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="4dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txt_selected_date_mood"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Selectează o zi din calendar..."
                        android:textSize="14sp"
                        android:textColor="#555555"/>

                    <ImageView
                        android:id="@+id/img_mood_result"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_mood_3"
                        android:visibility="gone"
                        app:tint="#B0BEC5"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/container_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#FDFCF0"
        android:clickable="true"
        android:focusable="true">

        <ImageButton
            android:id="@+id/btn_close_player"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/breathing_circle"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="125dp"
            app:cardBackgroundColor="#E0F2F1"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/txt_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Start"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#008577"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/breathing_circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="01:00"
            android:textSize="24sp"
            android:textColor="#37474F"/>

        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_timer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Începe Exercițiul"
            android:backgroundTint="#008577"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
</FrameLayout>